<%- include('../partials/header') -%>

<div class="col-9">
    <div class="container p-3 w-100">
        <h1 class="mt-5 mb-4">In Stock Products</h1>
        <%- include('../partials/messages') -%>
        <div class="container">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Website</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Title</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Website</th>
                        <th>Actions</th>
                    </tr>
                </tfoot>
                <tbody>

                    <% products.forEach((pro)=> { %>
                        <tr>
                            <td><%= pro.sku %></td>
                            <td><%= pro.title %></td>
                            <td class='prod-price'><%= pro.newprice %></td>
                            <td><%= pro.newstock %></td>
                            <td><%= pro.company %></td>
                            <td>
                                <a target="black" class="btn btn-primary p-2" href="<%= pro.url %>"><i class="fas fa-eye"></i></a>
                                <form style="display: inline;" action="/delete/product/<%= pro.id %>?_method=DELETE" method="POST">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button style="cursor: pointer;" type="submit" class="btn btn-danger p-2"><i class="fas fa-trash"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>  

                </tbody>
            </table>
            <br />
            <div class="alert alert-success text-center h4">
                Total price
                <b id="totalPrice" class='px-2'>0</b>
            </div>
        </div>

    </div>
</div>
</div>


<%- include('../partials/footer') -%>